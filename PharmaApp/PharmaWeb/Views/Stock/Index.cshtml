@model IEnumerable<PharmaDomain.Stock>
@{
    ViewBag.Title = "Stock";
}

<h2>Liste des Stocks</h2>
<div class="row">
    <div class="col-sm-3">
        <a href='@Url.Action("Add","Stock",new { id = 1})'><div class="btn btn-success">Ajouter</div></a>
    </div>
</div><br/>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr class="text-center success">
            <th>@Html.DisplayNameFor(e => e.NumStock)</th>
            <th>@Html.DisplayNameFor(e => e.QuantiteMedicament)</th>
            <th>Supprimer</th>
        </tr>
    </thead>
    <tbody class="text-center">
        @{
            foreach (PharmaDomain.Stock f in Model)
            {
                <tr>
                    <td>@f.NumStock</td>
                    <td>@f.QuantiteMedicament</td>
                    <td><a href='@Url.Action("Delete","Famille",new { id = @f.NumStock })'><img src="~/Content/img/delete.png" /></a></td>
                </tr>
            }
        }
    </tbody>
</table>


