@model IEnumerable<PharmaDomain.Medicament>
@{
    ViewBag.Title = "Medicaments";
}

<h2>Liste des Medicaments</h2>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr class="text-center success">
            <th>@Html.DisplayNameFor(e => e.CodeMedicament)</th>
            <th>@Html.DisplayNameFor(e => e.LibelleMedicament)</th>
            <th>@Html.DisplayNameFor(e => e.Prix)</th>
            <th>@Html.DisplayNameFor(e => e.CodeFamille)</th>
            <th>Modifier</th>
            <th>Supprimer</th>
        </tr>
    </thead>
    <tbody class="text-center">
        @{
            foreach (PharmaDomain.Medicament f in Model)
            {
                <tr>
                    <td>@f.CodeMedicament</td>
                    <td>@f.LibelleMedicament</td>
                    <td>@f.Prix</td>
                    <td>@InstanceResolver.Instance.Famille.GetOneFamilleById(f.CodeFamille).Designation</td>
                    <td><a href='@Url.Action("Edit","Medicament",new { id = @f.CodeMedicament })'><img src="~/Content/img/writing.png" /></a></td>
                    <td><a href='@Url.Action("Delete","Medicament",new { id = @f.CodeMedicament })'><img src="~/Content/img/delete.png" /></a></td>
                </tr>
            }
        }
    </tbody>
</table>

