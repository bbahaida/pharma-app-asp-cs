@model IEnumerable<PharmaDomain.User>
@{
    ViewBag.Title = "Utilisateurs";
}

<h2>Liste des Utilisateurs</h2>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr class="text-center success">
            <th>@Html.DisplayNameFor(e=> e.Login)</th>
            <th>@Html.DisplayNameFor(e => e.Name)</th>
            <th>Modifier</th>
            <th>Supprimer</th>
        </tr>
    </thead>
    <tbody class="text-center">
        @{
            foreach (PharmaDomain.User f in Model)
            {
                <tr>
                    <td>@f.Login</td>
                    <td>@f.Name</td>
                    <td><a href='@Url.Action("Edit","User",new { id = @f.UserId })'><img src="~/Content/img/writing.png" /></a></td>
                    <td><a href='@Url.Action("Delete","User",new { id = @f.UserId })'><img src="~/Content/img/delete.png" /></a></td>
                </tr>
            }
        }
    </tbody>
</table>

