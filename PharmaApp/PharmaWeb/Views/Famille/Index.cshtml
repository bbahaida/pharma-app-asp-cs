@model IEnumerable<PharmaDomain.Famille>
@{
    ViewBag.Title = "Familles";
}

<h2>Liste des Familles</h2>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr class="text-center success">
            <th>@Html.DisplayNameFor(e => e.CodeFamille)</th>
            <th>@Html.DisplayNameFor(e => e.Designation)</th>
            <th>Modifier</th>
            <th>Supprimer</th>
        </tr>
    </thead>
    <tbody class="text-center">
        @{ 
            foreach (PharmaDomain.Famille f in Model)
            {
                <tr>
                    <td>@f.CodeFamille</td>
                    <td>@f.Designation</td>
                    <td><a href='@Url.Action("Edit","Famille",new { id = @f.CodeFamille })'><img src="~/Content/img/writing.png" /></a></td>
                    <td><a href='@Url.Action("Delete","Famille",new { id = @f.CodeFamille })'><img src="~/Content/img/delete.png" /></a></td>
                </tr>
            }
        }
    </tbody>
</table>

